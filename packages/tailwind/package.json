    "email": "code@jasi.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/corvudev/corvu"
  },
  "license": "MIT",
  "author": {
    "name": "Jasmin Noetzli",
    "email": "code@jasi.dev",
    "url": "https://github.com/GiyoMoon"
