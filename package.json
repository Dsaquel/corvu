{
  "name": "@corvu/monorepo",
  "version": "0.1.0",
  "description": "Unstyled, accessible and customizable primitives for SolidJS",
  "author": {
    "name": "Jasmin Noetzli",
    "email": "code@jasi.dev",
    "url": "https://github.com/GiyoMoon"
  },
  "license": "MIT",
  "homepage": "https://corvu.dev",
  "private": true,
  "scripts": {
    "dev:core": "npm-run-all --parallel dev:core-dev watch:core",
    "dev:core-dev": "pnpm -r --filter @corvu/core-dev run dev",
    "build": "npm-run-all --parallel build:*",
    "build:core": "pnpm -r --filter @corvu/core run build",
    "build:tailwind": "pnpm -r --filter @corvu/tailwind run build",
    "lint": "npm-run-all --parallel lint:*",
    "lint:core": "pnpm -r --filter @corvu/core run lint",
    "lint:core-dev": "pnpm -r --filter @corvu/core-dev run lint",
    "lint:tailwind": "pnpm -r --filter @corvu/tailwind run lint",
    "watch:core": "pnpm -r --filter @corvu/core run watch"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
