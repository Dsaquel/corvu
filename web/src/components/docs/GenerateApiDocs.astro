---
import {
  type ApiReference as ApiReferenceType,
  getComponent,
  getUtility,
} from '@lib/getTypes'
import type {
  ComponentSpecifications,
  UtilitySpecifications,
} from '@lib/apiSpecifications'
import ApiReference from '@components/docs/ApiReference.astro'

interface Props {
  primitive?: ComponentSpecifications
  utility?: UtilitySpecifications
}

const { primitive, utility } = Astro.props

let apiReferences: ApiReferenceType[]

if (primitive) {
  apiReferences = getComponent(primitive)
} else {
  apiReferences = getUtility(utility!)
}
---

<div class="space-y-14">
  {apiReferences.map((apiReference) => <ApiReference {...apiReference} />)}
</div>
